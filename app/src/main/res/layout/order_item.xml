<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        app:cardElevation="3dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="18dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_id"
                    android:textSize="16sp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Order: bdjvbj124141"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:width="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/order_date"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/ultraSoftColor"
                    android:text="26-3-2021"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/ultraSoftColor" />


            <LinearLayout
                android:weightSum="1"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/ultraSoftColor"
                        android:text="Quantity: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/quantity"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/primaryText"
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/ultraSoftColor"
                        android:text="Total Amount: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/total_price"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/primaryText"
                        android:text="$30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/details"
                    android:text="Details"
                    android:background="@drawable/add_button_back"
                    android:layout_width="150dp"
                    android:layout_height="40dp"/>


                <TextView
                    android:id="@+id/order_status"
                    android:gravity="end"
                    android:textColor="@color/successColor"
                    android:text="Delivered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>